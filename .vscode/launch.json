    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to gdbserver",
            "type": "gdb",
            "request": "attach",
            "gdbpath": "/usr/bin/gdb-multiarch",
            "executable": "./build/kernel.elf",
            "target": "localhost:1234",
            "remote": true,
            "printCalls": true,
            "cwd": "${workspaceRoot}",
            "valuesFormatting": "parseText"
        }
    ]
}